<link rel="stylesheet" href="/css/add_employee.css">

<% if(locals.user && locals.user.isAdmin === true) {%>

    <div id="employee-container">

        <h2>Employee Details</h>

        <form action="/admin/create-employee" method="post">

            <div class="input-box">
                <input type="text" name="name" required="required">
                <span>Name</span>
            </div>

            <div class="input-box">
                <input type="email" name="email" required="required">
                <span>Email</span>
            </div>

            <div class="input-box">
                <input type="password" name="password" required="required">
                <span>Password</span>
            </div>

            <div class="input-box">
                <input type="password" name="confirmPassword" required="required">
                <span>Confirm Password</span>
            </div>

            <input type="submit" value="Add Employee"> 

        </form>

    </div>

<% } %>