<link rel="stylesheet" href="/css/add_review.css">

<% if(locals.user && locals.user.isAdmin === true) {%>

    <div id="review-container">
        <h2>Assign Review</h2>

        <form action="/admin/add-review/<%= reviewer._id %>" method="post">

            <div class="input-box">
                <input type="text" name="reviewer" value="<%= reviewer.name %>" readonly>
                <span>Reviewer</span>
            </div>

            <select name="recipient_email" required/>
                <option value="">Select Recipient</option>
                <% for (recipient of users) { %>

                    <% if(recipient.email != reviewer.email) { %>
                        <option value="<%= recipient.email %>">
                            <%= recipient.name %>
                        </option>
                    <% } %>

                <% } %>
            </select>

            <input type="submit" value="Assign Task">
        </form>
    </div>

<% } %>