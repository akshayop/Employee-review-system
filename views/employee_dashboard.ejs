<% if(locals.user) {%>

    <div>

        <div>
            <h2>Assigned Reviews</h2>

            <% for(review of userToReview) { %>

                <form action="/review/create-review/<%= employee._id %>" method="post">

                    <div>
                        <label for="recipient_email"></label>
                        <input type="email" id="recipient_email" name="recipient_email" value="<%= review.email %>" readonly>
                    </div>

                    <div>
                        <label for="feedback">Feedback</label>
                        <textarea name="feedback" id="feedback"></textarea>
                    </div>

                    <input type="submit" value="Submit">

                </form>

            <% } %>
        </div>

        <div>
            <h2>Feedbacks</h2>

            

            <% for(review of reviewsFromOthers) { %>
                <div>
                    Reviewer:
                    <span><%= review.reviewer.name %></span>
                </div>

                <div>
                    Feedback:
                    <span><%= review.review %></span>
                </div>
            <% } %>
        </div>

        
    </div>

<% } %>