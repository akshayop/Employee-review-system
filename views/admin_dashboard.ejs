<link rel="stylesheet" href="/css/admin_dashboard.css">

<div id="main-container">
    <% if(locals.user && locals.user.isAdmin === true) {%>
        
            
        <table>
            <caption>
                List of all Employees
            </caption>

            
            <thead>
                <tr>
                    <th scope="col" class="p-1">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">email</th>
                    <th scope="col">Role</th>
                    <th scope="col" class="p-1">Delete</th>
                    <th scope="col" class="p-1">Edit</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < users.length; i++) { %>

                    <tr>
                        <th scope="row"><%= i + 1 %></th>
                        <td> <%= users[i].name %></td>
                        <td><%= users[i].email %></td>
                        <td>
                            <% if(users[i].isAdmin == true) { %>
                                <span> Admin</span>
                            <% } else {%>
                                <span> Employee</span>
                            <% } %>
                        </td>
                        <td>
                            <div class="btn delete-btn">
                                <a href="/admin/delete-employee/<%= users[i]._id %>">Delete</a>
                            </div>
                        </td>
                        <td>
                            <div class="btn edit-btn">
                                <a href="/admin/edit-employee/<%= users[i]._id %>">Edit</a>
                            </div>
                        </td>
                    </tr>
                
                <% } %>
            </tbody>
        </table>
            
    <% } %>
</div>